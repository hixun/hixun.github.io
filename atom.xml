class="meta-keyword">include</span> <span class="meta-string">&lt;stdlib.h&gt;</span></span></div><div class="line"><span class="meta">#<span class="meta-keyword">include</span> <span class="meta-string">&lt;fstream&gt;</span></span></div><div class="line"><span class="meta">#<span class="meta-keyword">include</span> <span class="meta-string">&lt;ctype.h&gt;</span></span></div><div class="line"></div><div class="line"><span class="keyword">using</span> <span class="keyword">namespace</span> <span class="built_in">std</span>;</div><div class="line"></div><div class="line"><span class="keyword">int</span> c[<span class="number">27</span>];</div><div class="line"><span class="keyword">int</span> str_len = <span class="number">0</span>;</div><div class="line"><span class="keyword">char</span> str[<span class="number">18</span>];</div><div class="line"><span class="keyword">int</span> mj[<span class="number">18</span>];</div><div class="line"></div><div class="line"><span class="function"><span class="keyword">bool</span> <span class="title">search</span><span class="params">(<span class="keyword">int</span> dep)</span></span>&#123;  <span class="comment">//回溯法递归过程</span></div><div class="line">	<span class="keyword">int</span> i;</div><div class="line">	<span class="keyword">for</span> (i = <span class="number">0</span>; i &lt; <span class="number">27</span>; i++)</div><div class="line">	&#123;</div><div class="line">		<span class="keyword">if</span> (c[i] &gt;= <span class="number">3</span>)</div><div class="line">		&#123;   <span class="comment">//刻子</span></div><div class="line">			<span class="keyword">if</span> ((dep == <span class="number">3</span> &amp;&amp; str_len == <span class="number">14</span>) || (dep == <span class="number">2</span> &amp;&amp; str_len == <span class="number">11</span>) || (dep == <span class="number">1</span> &amp;&amp; str_len == <span class="number">8</span>) || (dep == <span class="number">0</span> &amp;&amp; str_len == <span class="number">5</span>))</div><div class="line">				<span class="keyword">return</span> <span class="literal">true</span>;</div><div class="line">			c[i] -= <span class="number">3</span>;</div><div class="line">			<span class="keyword">if</span> (search(dep + <span class="number">1</span>)) 				</div><div class="line">				<span class="keyword">return</span> <span class="literal">true</span>;</div><div class="line">			c[i] += <span class="number">3</span>;</div><div class="line">		&#125;</div><div class="line">	&#125;</div><div class="line">		</div><div class="line">	<span class="keyword">for</span> (i = <span class="number">0</span>; i &lt;= <span class="number">24</span>; i++) <span class="keyword">if</span> (i % <span class="number">9</span> &lt;= <span class="number">6</span> &amp;&amp; c[i] &gt;= <span class="number">1</span> &amp;&amp; c[i + <span class="number">1</span>] &gt;= <span class="number">1</span> &amp;&amp; c[i + <span class="number">2</span>] &gt;= <span class="number">1</span>)&#123;                                          <span class="comment">//顺子</span></div><div class="line">		<span class="keyword">if</span> (dep == <span class="number">3</span>) <span class="keyword">return</span> <span class="literal">true</span>;</div><div class="line">		c[i]--; c[i + <span class="number">1</span>]--; c[i + <span class="number">2</span>]--;</div><div class="line">		<span class="keyword">if</span> (search(dep + <span class="number">1</span>)) <span class="keyword">return</span> <span class="literal">true</span>;</div><div class="line">		c[i]++; c[i + <span class="number">1</span>]++; c[i + <span class="number">2</span>]++;</div><div class="line">	&#125;</div><div class="line">	<span class="keyword">return</span> <span class="literal">false</span>;</div><div class="line">&#125;</div><div class="line"></div><div class="line"><span class="function"><span class="keyword">bool</span> <span class="title">check</span><span class="params">()</span></span>&#123;</div><div class="line">	<span class="keyword">int</span> i;</div><div class="line">	<span class="keyword">for</span> (i = <span class="number">0</span>; i &lt; <span class="number">27</span>; i++)</div><div class="line">	&#123;</div><div class="line">		<span class="keyword">if</span> (c[i] == <span class="number">2</span> &amp;&amp; str_len == <span class="number">2</span>)</div><div class="line">		&#123;</div><div class="line">			<span class="keyword">return</span> <span class="literal">true</span>;</div><div class="line">		&#125;</div><div class="line">		<span class="keyword">if</span> (c[i] &gt;= <span class="number">2</span>)&#123;   <span class="comment">//将牌</span></div><div class="line">			c[i] -= <span class="number">2</span>;</div><div class="line">			<span class="keyword">if</span> (search(<span class="number">0</span>))</div><div class="line">				<span class="keyword">return</span> <span class="literal">true</span>;</div><div class="line">			c[i] += <span class="number">2</span>;</div><div class="line">		&#125;</div><div class="line">	&#125;</div><div class="line">		</div><div class="line">	<span class="keyword">return</span> <span class="literal">false</span>;</div><div class="line">&#125;</div><div class="line"></div><div class="line"><span class="function"><span class="keyword">int</span> <span class="title">main</span><span class="params">(<span class="keyword">void</span>)</span></span></div><div class="line">&#123;</div><div class="line">	</div><div class="line">	FILE* fp = fopen(<span class="string">"execute.stdin"</span>, <span class="string">"r"</span>);</div><div class="line"></div><div class="line">	fgets(str, <span class="number">19</span>, fp);</div><div class="line">	<span class="keyword">while</span> (str[str_len])</div><div class="line">	&#123;</div><div class="line">		str_len++;	</div><div class="line">	&#125;</div><div class="line"></div><div class="line">	<span class="keyword">for</span> (<span class="keyword">int</span> i = <span class="number">0</span>; i &lt; str_len; i++)</div><div class="line">	&#123;</div><div class="line">		<span class="keyword">if</span> (<span class="built_in">isdigit</span>(str[i]))</div><div class="line">		&#123;</div><div class="line">			mj[i] = (str[i] - <span class="string">'1'</span>);</div><div class="line">		&#125;</div><div class="line">		<span class="keyword">else</span> <span class="keyword">if</span> (<span class="built_in">isupper</span>(str[i]))</div><div class="line">		&#123;</div><div class="line">			mj[i] = (str[i] - <span class="string">'A'</span>) + <span class="number">9</span>;</div><div class="line">		&#125;</div><div class="line">		<span class="keyword">else</span> <span class="keyword">if</span> (<span class="built_in">islower</span>(str[i]))</div><div class="line">		&#123;</div><div class="line">			mj[i] = (str[i] - <span class="string">'a'</span>) + <span class="number">18</span>;</div><div class="line">		&#125;</div><div class="line">	&#125;</div><div class="line"></div><div class="line">	<span class="keyword">for</span> (<span class="keyword">int</span> j = <span class="number">0</span>; j &lt; str_len; j++) </div><div class="line">		c[mj[j]]++;</div><div class="line"></div><div class="line"></div><div class="line">	<span class="keyword">if</span> (str_len == <span class="number">14</span>)</div><div class="line">	&#123;</div><div class="line">		<span class="keyword">if</span> (check() == <span class="number">1</span>)</div><div class="line">		&#123;</div><div class="line">			<span class="built_in">cout</span> &lt;&lt; <span class="string">"GOOD"</span>;</div><div class="line">		&#125;</div><div class="line">		<span class="keyword">else</span> <span class="keyword">if</span> ((c[mj[<span class="number">1</span>]] == <span class="number">2</span>) &amp;&amp; (c[mj[<span class="number">2</span>]] == <span class="number">2</span>) &amp;&amp; (c[mj[<span class="number">3</span>]] == <span class="number">2</span>) &amp;&amp; (c[mj[<span class="number">4</span>]] == <span class="number">2</span>) &amp;&amp; (c[mj[<span class="number">5</span>]] == <span class="number">2</span>) &amp;&amp; (c[mj[<span class="number">6</span>]] == <span class="number">2</span>) &amp;&amp; (c[mj[<span class="number">0</span>]] == <span class="number">2</span>))</div><div class="line">		&#123;</div><div class="line"></div><div class="line">			<span class="built_in">cout</span> &lt;&lt; <span class="string">"GOOD"</span>;</div><div class="line">		&#125;</div><div class="line">		<span class="keyword">else</span></div><div class="line">		&#123;</div><div class="line">			<span class="built_in">cout</span> &lt;&lt; <span class="string">"BAD"</span>;</div><div class="line">		&#125;</div><div class="line">	&#125;</div><div class="line">	<span class="keyword">else</span> <span class="keyword">if</span> ((str_len &gt; <span class="number">14</span>) &amp;&amp; (str_len &lt;= <span class="number">18</span>))</div><div class="line">	&#123;</div><div class="line">		<span class="keyword">int</span> tem = <span class="number">0</span>;</div><div class="line">		<span class="keyword">int</span> four_num = <span class="number">0</span>;</div><div class="line"></div><div class="line">		<span class="keyword">for</span> (<span class="keyword">int</span> j = <span class="number">0</span>; j &lt; str_len; j++)</div><div class="line">		&#123;</div><div class="line">			<span class="keyword">if</span> (c[mj[j]] == <span class="number">4</span>)</div><div class="line">			&#123;</div><div class="line">				four_num++;</div><div class="line">				c[mj[j]] = <span class="number">0</span>;</div><div class="line">				tem = mj[j];</div><div class="line">				<span class="keyword">for</span> (<span class="keyword">int</span> i = <span class="number">0</span>; i &lt; str_len; i++)</div><div class="line">				&#123;</div><div class="line">					<span class="keyword">if</span> (tem == mj[i])</div><div class="line">					&#123;</div><div class="line">						mj[i] = <span class="number">0</span>;</div><div class="line">					&#125;</div><div class="line">				&#125;</div><div class="line">			&#125;</div><div class="line">		&#125;</div><div class="line">		str_len = str_len - four_num * <span class="number">4</span>;</div><div class="line">		<span class="keyword">if</span> (check())</div><div class="line">		&#123;</div><div class="line">			<span class="built_in">cout</span> &lt;&lt; <span class="string">"GOOD"</span>;</div><div class="line">		&#125;</div><div class="line">		<span class="keyword">else</span></div><div class="line">		&#123;</div><div class="line">			<span class="built_in">cout</span> &lt;&lt; <span class="string">"BAD"</span>;</div><div class="line">		&#125;</div><div class="line">	&#125;</div><div class="line">	<span class="keyword">else</span></div><div class="line">	&#123;</div><div class="line">		<span class="built_in">cout</span> &lt;&lt; <span class="string">"BAD"</span>;</div><div class="line">	&#125;</div><div class="line"></div><div class="line">	system(<span class="string">"pause"</span>);</div><div class="line">	<span class="keyword">return</span> <span class="number">0</span>;</div><div class="line">&#125;</div></pre></td></tr></table></figure></p>
